{% extends 'layout.html.twig' %}
{% block title %}Edit profile
{% endblock %}

{% block content %}
<div class="container mt-5">
	<div class="jumbotron my-5 bg-dark text-white">
		{% if error is not null %}
		<div class="alert alert-danger" role="alert">
			{{error}}
		</div>
		{% endif %}
		<h2 class="display-4">Edit :</h2>
		<form method="POST">
            <input type="hidden" value="{{ session.user.id }}" name="id">
            <input type="hidden" value="{{ session.user.adopter_id }}" name="adopter_id">
			<div class="form-group">
				<label for="email">Email address</label>
				<input type="email" class="form-control" id="email" name="email" value="{{user.user.email}}">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" class="form-control" id="password" name="password" value="{{user.user.password}}">
			</div>
			<div class="form-group">
				<label for="password2">Check Password</label>
				<input type="password" class="form-control" id="password2" name="password2" value="{{user.user.password}}">
			</div>
			<div class="form-group">
				<label for="firstname">Firstname</label>
				<input type="text" class="form-control" id="firstname" value="{{ user.adopter.firstname }}" name="firstname">
			</div>
			<div class="form-group">
				<label for="lastname">Lastname</label>
				<input type="text" class="form-control" id="lastname" value="{{ user.adopter.lastname }}" name="lastname">
			</div>
			<div class="form-group">
				<label>Birthday</label>
				<input class="form-control" data-date-format="dd/mm/yyyy" id="datepicker" name="birthday" value="{{ user.adopter.birthday|date('Y-m-d') }}">
			</div>
			<div class="form-group">
				<label for="address">Address</label>
				<input type="text" class="form-control" id="address" value="{{ user.adopter.address }}" name="address">
			</div>
			<button type="submit" class="btn btn-primary" name="update">Submit</button>
		</form>
	</div>
</div>
{% endblock %}