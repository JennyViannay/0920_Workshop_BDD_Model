{% extends 'layout.html.twig' %}

{% block content %}
<h2 class="display-4">Races :</h2>
<div class="text-right my-3">
    <a href="/race/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Species</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for race in races %}
        <tr>
            <td>{{ race.id }}</td>
            <td>{{ race.name }}</td>
            <td>{{ race.species_name }} -  <a href="/species/show/{{ race.species_id }}">(#{{ race.species_id }})</a></td>
            <td>
                <a href="/race/show/{{ race.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/race/edit/{{ race.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/race/delete/{{ race.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}