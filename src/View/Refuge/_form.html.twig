<form method="post">
    <input type="hidden" value="{{ refuge.id }}" name="id">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" value="{{ refuge.name }}" name="name">
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address"  value="{{ refuge.address }}" name="address">
    </div>
    <button type="submit" value="Valider" class="btn btn-primary">Submit</button>
</form>