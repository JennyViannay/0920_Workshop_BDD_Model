{% extends 'layout.html.twig' %}

{% block content %}
<h2 class="display-4">Refuges :</h2>
<div class="text-right my-3">
    <a href="/refuge/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for refuge in refuges %}
        <tr>
            <td>{{ refuge.name }}</td>
            <td>{{ refuge.address }}</td>
            <td>
                <a href="/refuge/show/{{ refuge.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/refuge/edit/{{ refuge.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/refuge/delete/{{ refuge.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}