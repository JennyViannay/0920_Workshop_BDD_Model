{% extends 'layout_admin.html.twig' %}

{% block content %}
<div class="container mt-5">
    <div class="card m-auto border-0 bg-darkness text-white p-5">
        <div class="card-body">
            <h2 class="card-title font-weight-bold text-orange display-4 mb-5">
                {{ animal.name }}, <small>{{animal.age}} Year(s)</small>
            </h2>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-xs-12">
                    <p class="card-text">{{animal.refuge_name}}</p>
                    <p class="card-text">{{animal.race_name}}</p>
                    <p class="card-text">Tattoo : {{animal.tattoo}}</p>
                    <p class="card-text">{{animal.is_vaccined ? 'Vaccined' : 'No Vaccined'}},
                        {{animal.is_sterilized ? 'Sterilized' : 'No Sterilized'}}</p>
                    <p class="card-text"></p>
                    <p class="card-text">{{animal.adopted_on ? 'Adopted' : 'Adopted Me'}}</p>
                </div>
                <div class="col-lg-8 col-md-6 col-xs-12">
                    <div class="row">
                        {% for image in images %}
                        <div class="m-auto">
                            <img src="{{image.url}}" alt="{{animal.name}}" class="img-fluid" style="max-height: 150px">
                        </div>
                        <div class="m-auto">
                            <a href="/image/delete/{{ animal.id }}/{{ image.id }}" class="btn btn-sm btn-screem my-2"><i
                                    class="fas fa-trash"></i></a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-center bg-darkness">
            <a href="/animal/show/{{ animal.id }}" class="btn btn-sm btn-dead my-2"><i
                    class="fas fa-book-reader"></i></a>
            <a href="/animal/edit/{{ animal.id }}" class="btn btn-sm btn-pumpkin my-2"><i class="fas fa-pen"></i></a>
            <a href="/animal/delete/{{ animal.id }}" class="btn btn-sm btn-screem my-2"><i class="fas fa-trash"></i></a>
            <a href="/animal/index" class="btn btn-sm btn-outline-primary my-2">back</a>
        </div>
    </div>
</div>
{% endblock %}