{% extends 'layout_admin.html.twig' %}

{% block content %}
{{dump(adopter)}}
<h1>Adopter #{{ adopter.id }}</h1>
<p>{{ adopter.id }}. {{ adopter.firstname }} - {{adopter.lastname}} - {{adopter.birthday}}</p>
<p>{{ adopter.address }}</p>
<a href="/adopter/show/{{ adopter.id }}" class="btn btn-sm btn-success my-2"><i class="fas fa-eye"></i></a>
<a href="/adopter/edit/{{ adopter.id }}" class="btn btn-sm btn-warning my-2"><i class="fas fa-edit"></i></a>
<a href="/adopter/delete/{{ adopter.id }}" class="btn btn-sm btn-danger my-2"><i class="fas fa-trash"></i></a>
{% endblock %}