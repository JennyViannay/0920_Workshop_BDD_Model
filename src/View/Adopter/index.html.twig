{% extends 'layout.html.twig' %}

{% block content %}
<h2 class="display-4">Adopters :</h2>
<div class="text-right my-3">
    <a href="/adopter/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Birthday</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for adopter in adopters %}
        <tr>
            <td>{{ adopter.id }}</td>
            <td>{{ adopter.firstname }}</td>
            <td>{{ adopter.lastname }}</td>
            <td>{{ adopter.birthday }}</td>
            <td>{{ adopter.address }}</td>
            <td>
                <a href="/adopter/show/{{ adopter.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/adopter/edit/{{ adopter.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/adopter/delete/{{ adopter.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}