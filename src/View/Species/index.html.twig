{% extends 'layout.html.twig' %}

{% block content %}
<h2 class="display-4">Species :</h2>
<div class="text-right my-3">
    <a href="/species/add" class="btn btn-sm btn-primary">New <i class="fas fa-plus-circle"></i></a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {% for species in speciess %}
        <tr>
            <td>{{ species.name }}</td>
            <td>
                <a href="/species/show/{{ species.id }}" class="btn btn-sm btn-success my-2"><i
                        class="fas fa-eye"></i></a>
                <a href="/species/edit/{{ species.id }}" class="btn btn-sm btn-warning my-2"><i
                        class="fas fa-edit"></i></a>
                <a href="/species/delete/{{ species.id }}" class="btn btn-sm btn-danger my-2"><i
                        class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}